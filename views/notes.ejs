<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/app.css" />
    <link rel="shortcut icon" href="/favicon.png" type="image/x-icon" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Sticky Notes</title>
  </head>
  <body>
    <div class="header">
      <h2 class="heading">Sticky Notes</h2>
      <a href="/logout"><button class="logoutBtn">logout</button></a>
    </div>

    <% if (message) { %>
    <div id="messageContainer" class="">
      <p><%= message %></p>
      <i class="fa-solid fa-x" id="messageAction"></i>
    </div>
    <% } %>

    <div id="app">
      <!-- <div class="note-container">
        <textarea
          class="note"
          placeholder="Empty Sticky Note"
          spellcheck="false"
        ></textarea>
        <button>
          <i class="fa-regular fa-trash-can"></i>
        </button>
      </div> -->

      <button class="add-note" id="newNote" type="button">+</button>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <script>
      $("#messageAction").click(function () {
        $("#messageContainer").fadeOut();
      });
    </script>
    <script src="/scripts/appScript.js"></script>
  </body>
</html>
